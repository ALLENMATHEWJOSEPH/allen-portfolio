{
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "eslint.config.js",
    "prettier.config.js",
    "vite.config.ts"
  ],
  "compilerOptions": {
    /* =============================
       üß† Core Compiler Settings
    ============================== */
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "types": ["vite/client"],

    /* =============================
       üõ†Ô∏è Module Resolution
    ============================== */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",

    /* ‚úÖ Path alias for @/* ‚Üí src/* */
    "paths": {
      "@/*": ["src/*"]
    },

    /* =============================
       ‚öôÔ∏è Strictness and Build Options
    ============================== */
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  }
}
